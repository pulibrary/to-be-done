<main class="d-flex flex-column align-items-center mt-1 mt-md-4 mt-lg-5">
  <div class="bg-books">
    <img src=<%= image_url("books-light.svg") %> alt="" />
  </div>

  <h2 class="display-3 fw-bold text-primary">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
               html: { class: "user-form mb-3" }) do |f| %>
    <div class="field mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field mb-2">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions mt-4 ">
      <%= f.submit "Log In", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
