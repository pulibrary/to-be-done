<%= render "nav" %>

<header>
  <h1><%= current_user.first_name %>'s tbd</h1>
  <p>Here you can place everything that needs to be done, including reading, watching, or listening to something.</p>
</header>

<% ["Ready to Start", "In Progress", "Paused", "Finished"].each do |status| %>
  <%= link_to status, authenticated_root_path(status: status) %>
<% end %>

<main>
  <% ["Book", "TvShow", "Movie", "Music"].each do |type| %>
    <%= render "item_section", items: @items.where(type: type), item_type: type %>
  <% end %>
</main>
